<%- include('../includes/head.ejs') %> <%- include('../includes/heading.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
  <div class="container">
    <form
      action="/admin/<% if(editing){  %>edit-product<% } else { %>add-product<% } %>"
      method="post"
    >
      <div class="form-group">
        <label for="title">عنوان</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="نام محصول را وارد کنید"
          value="<% if(editing) { %> <%=  product.title %> <% } %>"
        />
      </div>
      <div class="form-group">
        <label for="title">قیمت</label>
        <input
          type="number"
          class="form-control"
          id="price"
          name="price"
          placeholder="قیمت محصول را وارد کنید"
          value="<% if(editing) {%><%=product.price%><%}%>"
        />
      </div>
      <div class="form-group">
        <label for="title">آدرس عکس</label>
        <input
          type="text"
          class="form-control"
          id="imageUrl"
          name="imageUrl"
          placeholder="عکس محصول را وارد کنید"
          value="<% if(editing) { %> <%=  product.imageUrl %> <% } %>"
        />
      </div>
      <div class="form-group">
        <label for="title">توضیحات</label>
        <textarea class="form-control" name="description" cols="30" rows="10">
<% if(editing) { %><%=product.description%> <% } %>
      </textarea
        >
      </div>
      <% if(editing) { %>
      <input type="hidden" value="<%= product._id %>" name="productId" />
      <% } %>

      <button type="submit" class="btn btn-primary">
        <% if(editing) { %> ویرایش محصول <% }else { %>افزودن محصول <% } %>
      </button>
    </form>
  </div>
</main>

<%- include('../includes/end.ejs') %>
